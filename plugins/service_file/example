#!/sbin/runiscript

setup()
{
	# register new service type, the $SERVICE will be "example" here.
    iregister service $SERVICE

    #iset $SERVICE need = "checkroot mountroot"
	
	# These 2 lines will be macro defined in the future.
	iset $SERVICE exec start = "$SERVICE_FILE internal_start"
	iset $SERVICE exec stop = "$SERVICE_FILE internal_stop"
	
	# Tell initng this service is done parsing.
    idone $SERVICE
}

start()
{
	echo "Starting $SERVICE"
    echo "init3g v0.0.1" > /etc/issue
	echo "env:"
	/usr/bin/env
    exit 0
}

stop()
{
	echo "Stopping $SERVICE here"
    rm /etc/issue
    exit 0
}
