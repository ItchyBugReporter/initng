# Let Jam know that this is a sub directory.
SubDir TOP core ;

# Directories that contain sources for libinitng:
LIBINITNG_SRC_DIRS = active_db active_state command common config data
    depend env error event execute fd fork handler hash interrupt io
    kill main module plugin_callers process_db service signal static string
    toolbox ;

# Where to look for headers:
SubDirHdrs $(TOP) include ;

# Build the library
SEARCH_SOURCE = $(SUBDIR)/$(LIBINITNG_SRC_DIRS) ;
LIBINITNG_SOURCES = [ Glob $(SUBDIR)/$(LIBINITNG_SRC_DIRS) : *.c ] ;
Library libinitng : $(LIBINITNG_SOURCES:BS) ;
