#!/sbin/runiscript

setup_example()
{
	# SERVICE: example
	iset need = system/bootmisc
	iexec start = strange_name_for_start
	iexec stop
}

setup_any()
{
	# SERVICE: example/*
	iset need = system/bootmisc
	iset exec start = "/bin/echo $SERVICE started!"
}

setup()
{
	ireg service example
	ireg service ''
}

strange_name_for_start()
{
	echo "Starting $SERVICE"
	echo "env:"
	/usr/bin/env
	exit 0
}

stop()
{
	echo "Stopping $SERVICE here"
	exit 0
}
